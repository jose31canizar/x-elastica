nav-bar-height = 65px
nav-bar-color = #17171d
nav-bar-text-color = #f1f1f1

.flip
  transform: rotate3d(1, 0, 0, -90deg)

.nav-bar-wrapper
  perspective: 100vw
  position: fixed
  top: 0
  left: 0
  width: 100%
  z-index: 1

.nav-bar
  background: nav-bar-color
  box-shadow: 0px 0px 10px 1px rgba(10, 10, 12, 0.5)
  position: fixed
  top: 0
  left: 0
  z-index: 99
  width: 100%
  white-space: nowrap
  display: flex
  align-items: center
  justify-content: center
  flex-direction: column
  transform-origin: top
  transition: transform 0.5s ease
  -webkit-font-smoothing: antialiased
  h1
    color: nav-bar-text-color
    padding: 0px 15px
    font-size: 6em

  ul
    width: 100%
    display: flex
    justify-content: center
    align-items: center
    height: nav-bar-height

    .nav-link:hover > .nav-item-above
        // transform: rotate3d(1, 0, 0, 0)

    .nav-link > .nav-item-above
      // transition: all 0.25s ease-in-out
      // transform: rotate3d(1, 0, 0, -90deg)
      // transform-origin: center top 8px
      // height: 0vh

    .nav-link:hover > .nav-item
        // transform: rotate3d(1, 0, 0, 90deg)

    .nav-link > .nav-item
      // transition: all  0.25s ease-in-out
      // transform: rotate3d(1, 0, 0, 0)
      // transform-origin: center bottom 8px

    .nav-link
      text-decoration: none
      color: #635656
      font-weight: 100
      z-index: 9

    li
      color: nav-bar-text-color
      list-style-type: none
      padding: 0px 10px
      user-select: none
      cursor: pointer
    li:hover
      color: #dea1a1

    li:before
      content:none

    .selected-page
      color: #dea1a1
    .dropdown
      animation: slidein 0.2s
      position: absolute
      background: #968893
      border-radius: 4px
      display: flex;
      justify-content: center;
      flex-direction: column;
      padding: 10px
      li
        border-top: 1px solid white
        padding: 5px 0
        color: black
      li:hover
        color: white
