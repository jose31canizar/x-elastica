@mixin reveal($t)
  -webkit-animation: reveal $t /* Safari, Chrome and Opera > 12.1 */
  -moz-animation: reveal $t /* Firefox < 16 */
  -ms-animation: reveal $t /* Internet Explorer */
  -o-animation: reveal $t /* Opera < 12.1 */
  animation: reveal $t

@keyframes reveal
  0%
    transform-origin: origin
    transform: translateX(0vw) translateY(0vw) scaleX(1) scaleY(1)
    font-size: 1em

  60%
    transform-origin: origin
    transform: translateX(-66.66vw) translateY(-33.1vh) scaleX(1) scaleY(7.69)
    font-size: 0em

  100%
    transform-origin: top left
    transform: translateX(-66.66vw) translateY(-33.1vh) scaleX(40) scaleY(7.69)
    font-size: 0em

@keyframes unreveal
  0%
    transform-origin: top left
    transform: translateX(-66.66vw) translateY(-33.1vh) scaleX(40) scaleY(7.69)
    font-size: 0em

  60%
    transform-origin: origin
    transform: translateX(0vw) translateY(-33.1vh) scaleX(1) scaleY(7.69)
    font-size: 0em

  100%
    transform-origin: origin
    transform: translateX(0vw) translateY(0vw) scaleX(1) scaleY(1)
    font-size: 1em
